<Window xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:Projeto3.View;assembly=Projeto3"
	x:Class="Projeto3.View.NovaNota" SizeToContent="WidthAndHeight">

<StackPanel>
	<local:NotaEmpresa DataContext="{Binding Empresa}"/>

	<StackPanel Orientation="Horizontal" IsVisible="{Binding !!Cliente}">
		<local:NotaCliente DataContext="{Binding Cliente}"/>
	</StackPanel>

	<Button Click="SelecionarCliente" Content="Selectionar Cliente"/>

	<local:NotaProdutoComprado DataContext="{Binding Produtos}"/>
	<Button Click="AdicionarProduto" Content="Adicionar Produto"/>

	<Button Click="Emitir" Content="Emitir"/>
</StackPanel>

</Window>
