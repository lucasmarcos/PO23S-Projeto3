<Window xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Projeto3.View.NovoProduto" SizeToContent="WidthAndHeight">

<Grid VerticalAlignment="Center" MinWidth="460">
	<Grid.ColumnDefinitions>
		<ColumnDefinition Width="Auto"/>
		<ColumnDefinition Width="*"/>
	</Grid.ColumnDefinitions>

	<Grid.RowDefinitions>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
		<RowDefinition/>
	</Grid.RowDefinitions>

	<TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" TextAlignment="Right" Text="Nome"/>
	<TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Nome}"/>

	<TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" TextAlignment="Right" Text="Valor"/>
	<TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Valor}"/>

	<TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" TextAlignment="Right" Text="Unidade"/>
	<TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Unidade}"/>

	<Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Click="BotaoCadastrar" Content="Cadastrar"/>
</Grid>

</Window>
