<Window xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:Projeto3.View;assembly=Projeto3"
	x:Class="Projeto3.View.ImprimirNota" SizeToContent="WidthAndHeight">

<StackPanel>
	<TextBlock FontSize="24" FontWeight="Bold" Text="Nota Fiscal"/>

	<local:NotaEmpresa DataContext="{Binding Empresa}"/>

	<local:NotaCliente DataContext="{Binding Cliente}"/>

	<!-- Maybe Items Simpler -->
	<local:NotaProdutoComprado DataContext="{Binding Produtos}"/>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<TextBlock FontWeight="Bold" Grid.Row="0" Grid.Column="0" Text="Total"/>
		<TextBlock FontWeight="Bold" Grid.Row="0" Grid.Column="1" Text="Data"/>
		<TextBlock FontWeight="Bold" Grid.Row="0" Grid.Column="2" Text="Codigo"/>

		<TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Total}"/>
		<TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Data}"/>
		<TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Codigo}"/>
	</Grid>
</StackPanel>

</Window>
