<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Projeto3.View.NotaEmpresa">

<StackPanel Orientation="Horizontal">
    <TextBlock FontWeight="Bold" Text="Nome Fantasia"/>
    <TextBlock Text="{Binding Nome}"/>
	<TextBlock FontWeight="Bold" Text="CNPJ"/>
	<TextBlock Text="{Binding CNPJ}"/>
	<TextBlock Text="{Binding Rua}"/>
	<TextBlock Text="{Binding Bairro}"/>
	<TextBlock Text="{Binding CEP}"/>
	<TextBlock Text="{Binding Cidade}"/>
    <TextBlock Text="{Binding UF}"/>
	<TextBlock Text="{Binding Telefone}"/>
</StackPanel>

</UserControl>
